<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="wrap_content"
    tools:context="fragments.DesdelaAFragment">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundendinputlogin"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/grayText"
            app:hintTextColor="@color/grayText"
            app:placeholderTextColor="@color/grayText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/textInputBuscar"
                android:backgroundTint="@color/white"
                android:hint="Buscar"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/search"
            android:id="@+id/buttonbuscar"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:padding="10dp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:text="BUSCAR"
            android:layout_height="50dp"/>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/recicleViewAtletas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
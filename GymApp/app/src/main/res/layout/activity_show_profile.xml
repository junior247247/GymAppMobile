<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="app.makingfight.gymapp.ShowProfileActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/imageViewProfile"
            android:scaleType="centerCrop"
            android:src="@drawable/imagetow"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/buttonEditar"
            android:textSize="12dp"
            android:textStyle="italic"
            android:background="@drawable/roundedinputs"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:text="editar"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:padding="10dp"
            android:backgroundTint="@color/red"
            android:layout_width="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewAlias"
                android:textSize="8dp"
                android:padding="5dp"
                android:text="ALIASdasdadadasd"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/textViewNombreLuchador"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColor="@color/grayText"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="JUNIOR JIMENEZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewPais"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/grayText"
            android:text="Republica dominicana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageViewBandera"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/imagetow"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/textViewEdad"
            android:layout_margin="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="@color/grayText"
            android:text="EDAD:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewAltura"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/grayText"
        android:text="ALTURA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewPeso"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/grayText"
        android:text="PESO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewAfiliacion"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/grayText"
        android:text="Afiliacion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewRegion"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/grayText"
        android:text="Region:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/gray"
    android:foreground="?android:selectableItemBackground"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageViewLuchador"
        android:src="@drawable/spiner"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="100dp"/>
   <LinearLayout
       android:layout_margin="5dp"
       android:layout_weight="1"
       android:layout_width="0dp"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/white"
           android:id="@+id/textViewTitleEvento"
           android:textStyle="bold"
           android:textSize="12dp"
           android:layout_marginLeft="5dp"
           android:text="UAE WARRIORS 27: AFRICA"
          android:layout_width="wrap_content"
           android:layout_height="wrap_content"  />

       <TextView

           android:textStyle="italic"
           android:id="@+id/textViewLugarEvento"
           android:textSize="10dp"
           android:layout_marginLeft="5dp"
           android:text="LUGAR EVENTO"
           android:textColor="@color/white"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:textStyle="italic"
           android:id="@+id/textViewCategoria"
           android:textSize="10dp"
           android:layout_marginLeft="5dp"
           android:text="MMA"
           android:textColor="@color/white"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView

            android:textColor="#ccc"
           android:id="@+id/textviewDate"
           android:textSize="10dp"
           android:layout_marginLeft="5dp"
           android:text="vie 25 de marzo de 2020 20:00"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"  />

   </LinearLayout>



</LinearLayout>
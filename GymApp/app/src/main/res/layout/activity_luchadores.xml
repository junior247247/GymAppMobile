<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.makingfight.gymapp.LuchadoresActivity"
   android:orientation="vertical"
    android:background="@color/black"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/toolbarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textViewAlias"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/grayText"
                        android:text="ALIAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textViewNombre"
                        android:layout_marginLeft="10dp"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="KAMARU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/grayText"
                            android:text="VICTORIAS"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/grayText"
                            android:text="DERROTAS"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/grayText"
                            android:text="EMPATES"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textViewVictorias"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="24"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textViewDerrotas"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textViewEmpates"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textViewPeso"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/grayText"
                            android:text="PESO PLUMA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/imageViewFlag"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/imagetow"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewLuchador"
                        android:src="@drawable/imagetow"
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/textViewRanchaVictoria"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text=""
                            android:textSize="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>













            <TextView
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="BIOGRAFIA"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_margin="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="NOMBRE: "
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewName2"
                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="JUNIOR JIMENEZ"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="EDAD: "
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewEdad"
                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="24"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="ALTURA: "
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewAltura"

                    android:textColor="@color/grayText"
                    android:textStyle="bold"
                    android:text="6'0"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewPesoCorporal"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/grayText"
                android:text="peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_margin="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="CIRCUITO"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"

                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_margin="3dp"
                        android:id="@+id/collapseAmateur"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:text="AMATEUR"
                            android:textColor="@color/white"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/imagebuttonAmateur"
                            android:backgroundTint="@color/gray"
                            android:src="@drawable/down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/carviewAmateur"
                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layoutHiddenAmateur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="260dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recicleViewAmateur"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"

                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="3dp"
                        android:id="@+id/collapsePro"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:text="PRO"
                            android:textColor="@color/white"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/imageButtonPro"
                            android:backgroundTint="@color/gray"
                            android:src="@drawable/down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>





                    </LinearLayout>




                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPro"
                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layoutHiddenPro"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="260dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recilceViewPRO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"

                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="3dp"
                        android:id="@+id/collapseRanking"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:text="RANKING"
                            android:textColor="@color/white"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/imageButtonRanking"
                            android:backgroundTint="@color/gray"
                            android:src="@drawable/down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>





                    </LinearLayout>




                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewrANKING"
                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layoutHiddenRanking"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="260dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recicleViewRankgins"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>







</LinearLayout>
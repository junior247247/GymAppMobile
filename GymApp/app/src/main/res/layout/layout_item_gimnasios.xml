<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/imageViewGym"
    android:layout_weight="0.4"
    android:layout_width="0dp"
    android:scaleType="centerCrop"
    android:layout_height="match_parent"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/textViewNameGym"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Welin Gym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewDesdeGym"
            android:textStyle="italic"
            android:text="Desde 1997 hasta 2020"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewArtesMarciales"
            android:textStyle="italic"
            android:text="Artes Marciales"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</LinearLayout>
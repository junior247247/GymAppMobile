<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="app.makingfight.gymapp.SecetionModeRegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/fondonuevo"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:alpha="0.1"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar

            android:theme="@style/toolbarName"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.smarteist.autoimageslider.SliderView
            android:layout_marginTop="150dp"
            android:id="@+id/sliderView"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="@color/white"
            app:sliderScrollTimeInSec="5"
            app:sliderStartAutoCycle="true" />
        <LinearLayout
           android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_gravity="center"

                android:id="@+id/linearLayoutRegistroGimnasio"
                android:clickable="true"
                android:foreground="?actionBarItemBackground"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/roundedinputs"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_height="60dp">



                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ring"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Registro de Gimnasio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <Button
                android:visibility="gone"
                android:id="@+id/buttonRegisterPromotor"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:text="Promotor"

                android:background="@drawable/roundedinputs"
                android:backgroundTint="@color/red"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
            android:padding="10dp"
                android:id="@+id/linearLayoutRegistroLuchador"
                android:clickable="true"
                android:foreground="?actionBarItemBackground"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:background="@drawable/roundedinputs"
                android:layout_marginHorizontal="30dp"
                android:layout_height="60dp">



                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:src="@drawable/boxeo"
                        android:layout_height="50dp"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Registro de Luchador"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"/>



            </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayoutRegistroEspectador"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="Registro de espectador"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginHorizontal="110dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>

        </LinearLayout>





        <Button
            android:visibility="gone"
            android:id="@+id/buttonRegisterAmdin"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:text="ADMIN"
            android:background="@drawable/roundedinputs"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="app.makingfight.gymapp.RankingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:theme="@style/toolbarName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16dp"
        android:id="@+id/textViewName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text="nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:id="@+id/linearLayoutRanking"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/red"
        android:background="@drawable/roundedinputs"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewRanking"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:text="SELECCIONAR RANKING"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:id="@+id/buttonEliminar"
        android:textColor="@color/white"
        android:text="ELIMINAR DE LISTA DE RANKING"
        android:background="@drawable/roundedinputs"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:padding="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/red"
        android:background="@drawable/roundedinputs"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="italic"
            android:textColor="@color/white"
            android:text="Â¿ES CAMPEON EN SU CATEGORIA?"
            android:textSize="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/checkEscampeon"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycleViewRegiones"
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
    <Button
        android:id="@+id/buttonGuardar"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/white"
        android:text="GUARDAR"
        android:background="@drawable/roundedinputs"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
       android:layout_marginTop="80dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
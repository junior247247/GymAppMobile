<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/gray"
    android:layout_margin="2dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:backgroundTint="@color/gray"
    android:layout_height="130dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/imageViewFoto"
            android:src="@drawable/imagetow"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:padding="1dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewTitulo"
                android:textColor="@color/grayText"
                android:text="TITULO DEL EVENTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewNombreLuchador"
                android:textColor="@color/grayText"
                android:text="NOMBRE DE LUCHADOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewIndividual"
                android:textSize="10dp"
                android:textColor="@color/grayText"
                android:text="individual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewHace"
                    android:textSize="8dp"
                    android:gravity="left"
                    android:textColor="@color/grayText"
                    android:text="HACE un momento"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:id="@+id/buttonAprovar"
                    android:textColor="@color/grayText"
                    android:text="APROVAR"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedinputs"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:id="@+id/buttonRechazar"
                    android:textColor="@color/grayText"
                    android:text="RECHAZAR"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedinputs"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>
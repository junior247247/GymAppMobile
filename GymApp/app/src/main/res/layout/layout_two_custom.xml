<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTittleNotification"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:layout_marginRight="5dp"
            android:text="Cuando se abrá debes dar clic sobre la opción de “Activar Office”.
Se iniciará el proceso de activación durante unos minutos."
            android:id="@+id/textViewDescriptionNotification"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iamgeViewNotificationTwo"
            android:scaleType="centerCrop"
            android:src="@drawable/imagetow"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>




    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context="app.makingfight.gymapp.ShowInfoPeleaActivity">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <androidx.appcompat.widget.Toolbar
               android:id="@+id/toolbar"
               android:theme="@style/toolbarName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <ImageView
               android:layout_marginTop="3dp"
               android:src="@drawable/imagetow"
               android:id="@+id/imageViewLuchador"
               android:layout_width="match_parent"
               android:layout_height="300dp"/>

           <LinearLayout
               android:layout_margin="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/buttonVs"
                   android:textColor="@color/grayText"
                   android:text="VERSUS"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/roundedinputs"
                   android:layout_width="0dp"
                   android:layout_weight="0.4"
                   android:layout_height="wrap_content"/>

               <Button
                   android:id="@+id/buttonListadepeleadores"
                   android:text="PELEADORES"
                   android:textColor="@color/grayText"
                   android:background="@drawable/roundedinputs"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginRight="8dp"
                   android:layout_height="wrap_content"/>

               <Button
                   android:visibility="gone"
                   android:background="@drawable/roundedinputs"
                   android:id="@+id/buttonunirme"
                   android:text="unirme"
                   android:textColor="@color/grayText"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


           </LinearLayout>
           <TextView
               android:id="@+id/textViewTitleEvento"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:layout_gravity="center"
               android:text="Title evento"
               android:gravity="center"
               android:layout_margin="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Fecha:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewFecha"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="2020/5/08"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>


           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Hora Del evento:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewHoraEvento"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="10:20:AM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Hora Del careo:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewHoraCareo"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="10:00:am"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Hora de la Primera Pelea"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewHoraPrimerPelea"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="10:00:am"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Categoria:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewCategoria"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="PESO PLUMA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Reglas:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewReglas"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="CATEGORIA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Premios:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewPremios"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="CATEGORIA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Lugar:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewLugar"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="CATEGORIA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>


           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Fecha Límite:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/textViewFechaLimite"
                   android:layout_marginLeft="5dp"
                   android:textStyle="italic"
                   android:textSize="12dp"
                   android:textColor="@color/white"
                   android:text="CATEGORIA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

       </LinearLayout>
   </ScrollView>

    <Button
        android:id="@+id/buttonCrearCombate"
        android:padding="10dp"
        android:background="@drawable/roundedinputs"
        android:text="CREAR COMBATES"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
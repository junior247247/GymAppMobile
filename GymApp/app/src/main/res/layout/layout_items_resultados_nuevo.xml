<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_marginVertical="10dp"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:foreground="?actionBarItemBackground"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="5dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/imageViewFotoEvento"
                android:scaleType="centerCrop"
                android:src="@drawable/banne1"
                android:layout_width="match_parent"

                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewNombres"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="MACHADO VS RODRIGUEZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textiViewGanador"
                    android:text="GANADOR:"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewNombreGanador"
                    android:layout_marginLeft="5dp"
                    android:text="JUNIOR JIMENEZ"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:textSize="12dp"

                android:text="Mira las estadisticas del encuentro"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_marginVertical="2dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>